<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="5" author="omar">
        <createTable tableName="app_event_product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(255)"/>
            <column name="product_price" type="DECIMAL(19,2)"/>
            <column name="product_description" type="TEXT"/>
            <column name="vendor_id" type="BIGINT"/>

            <!-- BaseAuditable fields -->
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="submitted_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>

        </createTable>

        <createIndex indexName="idx_product_name"
                     tableName="app_event_product">
            <column name="product_name"/>
        </createIndex>

        <createIndex indexName="idx_product_price"
                     tableName="app_event_product">
            <column name="product_price"/>
        </createIndex>

        <createIndex indexName="idx_product_vendor_id"
                     tableName="app_event_product">
            <column name="vendor_id"/>
        </createIndex>

        <createIndex indexName="idx_image_path"
                     tableName="app_image">
            <column name="image_path"/>
        </createIndex>

        <addForeignKeyConstraint baseTableName="app_event_product"
                                 baseColumnNames="vendor_id"
                                 referencedTableName="app_user_entity"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_vendor"/>
    </changeSet>
</databaseChangeLog>