<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

<changeSet id="8" author="omar">
    <createTable tableName="app_entity_owner">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="entity_type" type="VARCHAR(50)"/>
        <column name="brand_name" type="VARCHAR(255)"/>
        <column name="contact_person" type="VARCHAR(255)"/>
        <column name="primary_email" type="VARCHAR(255)"/>
        <column name="support_email" type="VARCHAR(255)"/>
        <column name="phone_number" type="VARCHAR(50)"/>
        <column name="tin" type="VARCHAR(50)"/>
        <column name="urn" type="VARCHAR(50)"/>
        <column name="business_name" type="VARCHAR(255)"/>
        <column name="website" type="VARCHAR(255)"/>

        <!-- BaseAuditable fields -->
        <column name="created_at" type="TIMESTAMP"/>
        <column name="updated_at" type="TIMESTAMP"/>
        <column name="submitted_at" type="TIMESTAMP"/>
        <column name="created_by" type="VARCHAR(255)"/>
        <column name="updated_by" type="VARCHAR(255)"/>


    </createTable>
</changeSet>
</databaseChangeLog>