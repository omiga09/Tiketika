<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="add-user-entity-roles-table" author="omar">

        <!-- Create join table -->
        <createTable tableName="user_entity_roles">
            <column name="user_entity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Primary Key -->
        <addPrimaryKey
                tableName="user_entity_roles"
                columnNames="user_entity_id, role_id"
                constraintName="pk_user_entity_roles"/>

        <!-- UserEntity -> FK -->
        <addForeignKeyConstraint
                baseTableName="user_entity_roles"
                baseColumnNames="user_entity_id"
                referencedTableName="app_user_entity"
                referencedColumnNames="id"
                constraintName="fk_user_entity_roles_user_entity"
                onDelete="CASCADE"/>

        <!-- Role -> FK -->
        <addForeignKeyConstraint
                baseTableName="user_entity_roles"
                baseColumnNames="role_id"
                referencedTableName="app_role"
                referencedColumnNames="id"
                constraintName="fk_user_entity_roles_role"
                onDelete="CASCADE"/>

        <!-- Indexes -->
        <createIndex
                indexName="idx_user_entity_roles_user"
                tableName="user_entity_roles">
            <column name="user_entity_id"/>
        </createIndex>

        <createIndex
                indexName="idx_user_entity_roles_role"
                tableName="user_entity_roles">
            <column name="role_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
