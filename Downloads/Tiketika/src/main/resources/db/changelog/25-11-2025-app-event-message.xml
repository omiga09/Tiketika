<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="4" author="omar">
        <createTable tableName="app_event_message">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message_type" type="VARCHAR(50)"/>
            <column name="message_sms_template" type="TEXT"/>
            <column name="message_email_template" type="TEXT"/>
            <column name="event_id" type="BIGINT"/>

            <!-- BaseAuditable fields -->
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="submitted_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>


        </createTable>

        <addForeignKeyConstraint baseTableName="app_event_message"
                                 baseColumnNames="event_id"
                                 referencedTableName="app_event"
                                 referencedColumnNames="id"
                                 constraintName="fk_eventmessage_event"/>

        <createIndex tableName="app_event_message" indexName="idx_event_message_id">
            <column name="id"/>
        </createIndex>
        <createIndex tableName="app_event_message" indexName="idx_event_message_type">
            <column name="message_type"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>