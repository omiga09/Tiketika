<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="6" author="omar">
        <createTable tableName="app_event_transaction">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tx_item_name" type="VARCHAR(255)"/>
            <column name="tx_item_amount" type="DECIMAL(19,2)"/>
            <column name="tx_item_quantity" type="INT"/>
            <column name="buyer_name" type="VARCHAR(255)"/>
            <column name="buyer_email" type="VARCHAR(255)"/>
            <column name="buyer_phone" type="VARCHAR(50)"/>
            <column name="vendor_name" type="VARCHAR(255)"/>
            <column name="vendor_email" type="VARCHAR(255)"/>
            <column name="vendor_phone" type="VARCHAR(50)"/>
            <column name="booking_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
            <column name="event_id" type="BIGINT"/>
            <column name="vendor_id" type="BIGINT"/>

            <!-- BaseAuditable fields -->
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="submitted_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>


        </createTable>

        <createIndex indexName="idx_event_tx_id"
                     tableName="app_event_transaction">
            <column name="id"/>
        </createIndex>

        <createIndex indexName="idx_event_tx_buyer_email"
                     tableName="app_event_transaction">
            <column name="buyer_email"/>
        </createIndex>

        <createIndex indexName="idx_event_tx_vendor_name"
                     tableName="app_event_transaction">
            <column name="vendor_name"/>
        </createIndex>

        <createIndex indexName="idx_event_tx_event_id"
                     tableName="app_event_transaction">
            <column name="event_id"/>
        </createIndex>

        <createIndex indexName="idx_event_tx_vendor_id"
                     tableName="app_event_transaction">
            <column name="vendor_id"/>
        </createIndex>

        <addForeignKeyConstraint baseTableName="app_event_transaction"
                                 baseColumnNames="booking_id"
                                 referencedTableName="app_event_booking"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_booking"/>

        <addForeignKeyConstraint baseTableName="app_event_transaction"
                                 baseColumnNames="product_id"
                                 referencedTableName="app_event_product"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_product"/>

        <addForeignKeyConstraint baseTableName="app_event_transaction"
                                 baseColumnNames="event_id"
                                 referencedTableName="app_event"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_event"/>

        <addForeignKeyConstraint baseTableName="app_event_transaction"
                                 baseColumnNames="vendor_id"
                                 referencedTableName="app_user_entity"
                                 referencedColumnNames="id"
                                 constraintName="fk_transaction_vendor"/>
    </changeSet>
</databaseChangeLog>