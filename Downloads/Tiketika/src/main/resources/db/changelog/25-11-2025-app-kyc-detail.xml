<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <!-- Unique id for this changeset -->
    <changeSet id="20251125-kyc-detail-01" author="omar">

        <createTable tableName="app_kyc_detail">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tin" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="vrn" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="business_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="website" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="contact_person" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="office_phone" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="personal_phone" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>

            <column name="primary_email" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="support_email" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="user_group_type" type="varchar(50)">
            <constraints nullable="true"/>
        </column>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="entity_owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="userGroupType" type="VARCHAR(50)"/>

            <!-- BaseAuditable fields -->
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="submitted_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>

        </createTable>

        <!-- Foreign key with cascade on delete -->
        <addForeignKeyConstraint baseTableName="app_kyc_detail"
                                 baseColumnNames="entity_owner_id"
                                 referencedTableName="app_entity_owner"
                                 referencedColumnNames="id"
                                 constraintName="fk_kycdetail_entityowner"
                                 onDelete="CASCADE"/>

        <!-- Index for foreign key for faster joins -->
        <createIndex tableName="app_kyc_detail" indexName="idx_kycdetail_entity_owner">
            <column name="entity_owner_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
